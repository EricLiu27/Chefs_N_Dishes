@{
    ViewData["Title"] = "View All Dishes";
    Layout = "_Heading";
}

@model List<Dish>
<div class="text-center">
    <h1 class="display-4">Yum! Check out our tasty dishes!</h1>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Chef</th>
                <th scope="col">Tastiness</th>
                <th scope="col">Calories</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Dish d in Model)
            {
                <tr>
                    <td scope="row">@d.Name</td>
                    <td>@d.Cook.FirstName @d.Cook.LastName</td>
                    <td>@d.Tastiness</td>
                    <td>@d.Calories</td>
                </tr>
            }
        </tbody>
    </table>

</div>


